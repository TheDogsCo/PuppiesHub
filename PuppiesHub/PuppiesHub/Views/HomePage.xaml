<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PuppiesHub.Views.HomePage"
             NavigationPage.HasNavigationBar="false">

    <StackLayout>
        <Label Text="Puppies Hub" Style="{StaticResource LogoTextStyle}"/>
        <Button Command="{Binding RequestDogCommand}" Text="New Dog" BackgroundColor="Coral" />
        <Image Source="{Binding RandomDog.Url}" HeightRequest="300" />
        <Label Text="{Binding RandomDog.Breeds[0].Name}" FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Center"  />
        <Label Text="{Binding RandomDog.Breeds[0].LifeSpan}" FontSize="16" HorizontalTextAlignment="Center" />
        <Label Text="{Binding RandomDog.Breeds[0].BreedGroup}" FontSize="16" HorizontalTextAlignment="Center" />
        <Label Text="{Binding RandomDog.Breeds[0].Temperament}" FontSize="16" HorizontalTextAlignment="Center" />

        <StackLayout Orientation="Horizontal" Margin="20">
            <Button Text="Copy Image" Command="{Binding CopyDogUrlCommand}" />
            <Button Text="Add to Wishlist" HorizontalOptions="FillAndExpand" Command="{Binding AddToWishlistCommand}" />
        </StackLayout>
    </StackLayout>

</ContentPage>