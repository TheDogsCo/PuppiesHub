<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PuppiesHub.Views.WishlistPage"
             xmlns:views="clr-namespace:PuppiesHub.Views"
             Title="Wishlist">
    <ContentPage.Content>
        <StackLayout>
            <AbsoluteLayout>
                <CollectionView ItemsSource="{Binding DogsWishlist}" SelectedItem="{Binding SelectedDog}" SelectionMode="Single">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <views:WishlistItemView BindingContext="{Binding}" />
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </AbsoluteLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>