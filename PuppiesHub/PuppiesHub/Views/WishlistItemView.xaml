                    Grid.Row="1" />
                <Label Text="{Binding SentAt.DayOfWeek}"  
                    TextColor="Black" 
                    Grid.Column="2"
                    Grid.RowSpan="2"
                    HorizontalOptions="EndAndExpand"
                    Margin="10,7"/>-->
    </Grid>
</ContentView>