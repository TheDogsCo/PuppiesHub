<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PuppiesHub.Views.WishlistItemView">
    <Grid ColumnDefinitions="50, *, 100" 
          RowDefinitions="*,*" 
          ColumnSpacing="20"
          RowSpacing="0"
          Margin="0,0,0,15">
        <Image Grid.Column="0" 
                Grid.RowSpan="2" 
                Source="{Binding Url}" 
                VerticalOptions="Center" 
                Margin="0,10,0,10" />
        <Label Text="{Binding Breeds[0].Name}" 
                TextColor="Black"  
                Grid.Column="1" 
                Grid.Row="0" />
        <!--<Label Text="{Binding Subject}" 
                    TextColor="Black" 
                    FontAttributes="Bold" 
